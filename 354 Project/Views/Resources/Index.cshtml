@model IEnumerable<_354_Project.Models.Resource>

@{
    ViewBag.Title = "Index";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h3>Resource</h3>
    </div>

    <div class="newButton">
        @* Potentially kim? *@
        <i class="fas fa-plus"></i>
        @Html.ActionLink("Create New", "Create", null, new { @style = "color: # fff" })
    </div>
    <br />
    <br /> 
    <div class="Search">
        <i class="newButton bsearch">
            @Html.ActionLink("Search", "Search", new { @style = "color: rgb(255,87,51)" })
        </i>
    </div>
    <br>
    <table class="table">
        <tr>
            <th>
                Resource Name
            </th>
            <th>
                Resource Description
            </th>
            <th>
                Resource Link
            </th>
            <th>
                Resource Image
            </th>
            <th>
                Cancer Type
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Res_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Res_Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Res_Link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Res_Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CancerType.CancerType_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Res_ID }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Res_ID }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Res_ID })
                </td>
            </tr>
        }

    </table>
    </div>